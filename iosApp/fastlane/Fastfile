# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    match(type: "appstore", app_identifier: "org.hekmatullahamin.deployiosapp.DeployIosApp", readOnly: true)
#     increment_build_number
    build_app(scheme: "iosApp")
    pilot(api_key_path: "fastlane/api_key_info.json", skip_waiting_for_build_processing: true)
  end
end
